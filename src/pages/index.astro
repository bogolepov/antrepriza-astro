import theater from '@data/theater.json'
import dictionary from '@data/dictionary.json'

let now = new Date();

// <meta name="google-site-verification" content="D5UaIDmzJIOUQz06voBegItDECWG5dKBhOxT6M-TWxw" />

---
<html>
	<head>
		<meta charset="UTF-8" />
		<meta name="robots" content="index, follow" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{theater.longTheaterName.ru}</title>
		<meta name="description" content={dictionary.description_index.ru} />
		<meta http-equiv="Last-Modified" content={now.toUTCString()} />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<link rel="icon" href="/favicon32.ico" sizes="32x32" />
		<link rel="icon" href="/favicon.ico" sizes="48x48" />
		<link rel="icon" type="image/png" href="/favicon.png" sizes="32x32" />
		<link rel="icon" type="image/png" href="/favicon.png" sizes="48x48" />
		<link rel="icon" type="image/png" href="/favicon96.png" sizes="96x96" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta property="fb:app_id" content="109865105533274" />
		<meta property="og:title" content={theater.longTheaterName['de']} />
		<meta property="og:description" content={dictionary.description_index['ru']} />
		<meta property="og:url" content={theater.our_website_link} />
		<meta property="og:type" content="website" />
		<meta property="og:site_name" content={theater.longTheaterName['ru']} />
		<meta property="og:image" content="https://antrepriza.eu/assets/logo_rw_1200.png" />
		<meta property="og:image:type" content="image/png" />
		<meta property="og:image:width" content="1200"/>
		<meta property="og:image:height" content="628"/>
		{
			theater.languages.map(lng => {
				return (
					<link rel="alternate" href={theater.our_website_link + "/" + lng.lang_code + "/"} hreflang={lng.lang_code} />
				);
			})
		}
		<link rel="alternate" href={theater.our_website_link + "/ru/"} hreflang="x-default" />
	</head>
	<body>
		<style>
			body{background-color:rgb(41, 41, 41);font-size:2px;}
		</style>
		
		{
			theater.languages.map(lng => {
				return (
					<div>
						<a href={theater.our_website_link + "/" + lng.lang_code + "/"}>{lng.lang_code.toUpperCase()}</a>
					</div>
				);
			})
		}
		<script is:inline>
			const CNF_LANG='LANG', LANG_RU='ru', LANG_DE='de';
			let currLang = LANG_RU;
			let userLang = localStorage.getItem(CNF_LANG) || navigator.language || navigator.userLanguage;
			if (userLang && userLang.toLowerCase().includes(LANG_DE)) currLang = LANG_DE;
			window.location.replace(`/${currLang}/`);
		</script>
	</body>
</html>


