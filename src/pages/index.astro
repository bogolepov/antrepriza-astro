---
// import AntreprizaLayout from "../layouts/AntreprizaLayout.astro";
// const pageTitle = "Театр Антреприза Берлин";
// const pageLang = "ru";
import theater from '@data/theater.json'
import dictionary from '@data/dictionary.json'

let now = new Date();
---
<style>
	body{background-color: rgb(41, 41, 41);font-size: 2px;}
</style>

<html>
	<head>
		<meta charset="UTF-8" />
		<meta name="robots" content="index, follow" />
		<meta http-equiv="Last-Modified" content={now.toUTCString()}>
		<title>Theater Antrepriza Berlin</title>
		<meta name="description" content={dictionary.description_index.ru}/>
		<meta name="google-site-verification" content="D5UaIDmzJIOUQz06voBegItDECWG5dKBhOxT6M-TWxw" />
		<!-- TODO: -->
		<link rel="icon" href="/favicon.ico" sizes="any" />
		<link rel="icon" type="image/png" href="/favicon.png" sizes="any" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		{
			theater.languages.map(lng => {
				return (
					<link rel="alternate" href={theater.main_website + "/" + lng.lang_code + "/"} hreflang={lng.lang_code} />
				);
			})
		}
		<link rel="alternate" href={theater.main_website + "/ru/"} hreflang="x-default" />
	</head>
	<body>
		{
			theater.languages.map(lng => {
				return (
					<div>
						<a href={theater.main_website + "/" + lng.lang_code + "/"}>{lng.lang_code.toUpperCase()}</a>
					</div>
				);
			})
		}
		<script is:inline>
			let currLang = 'ru';
			let userLang = localStorage.getItem('LANG') || navigator.language || navigator.userLanguage;
			if (userLang && userLang.toLowerCase().includes('de')) currLang = 'de';
			window.location.replace(`/${currLang}/`);
		</script>
	</body>
</html>


