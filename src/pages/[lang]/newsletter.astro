---
import theater from '@data/theater.json'
import dictionary from '@data/dictionary.json'

export function getStaticPaths () {
  return theater.languages.map(lng => {
    return {
      params: {lang: lng.lang_code},
      props: {pageLang: lng.lang_code, pageTitle: dictionary.newsletter[lng.lang_code] },
    };
  });
}

const { pageLang, pageTitle } = Astro.props;

import AntreprizaLayout from "@layouts/AntreprizaLayout.astro";
import NewsletterLayout from "@layouts/newsletter.astro";
---

<AntreprizaLayout title={pageTitle} lang={pageLang} robots="noindex, nofollow">
  <NewsletterLayout lang={pageLang}/>
</AntreprizaLayout>

