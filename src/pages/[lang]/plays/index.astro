---
import theater from '@data/theater.json'
import dictionary from '@data/dictionary.json'

export function getStaticPaths () {
  return theater.languages.map(lng => {
    return {
      params: {lang: lng.lang_code},
      props: {pageLang: lng.lang_code, pageTitle: dictionary.plays[lng.lang_code] + " â€” " + theater.shortTheaterName[lng.lang_code] },
    };
  });
}

import AntreprizaLayout from "@layouts/AntreprizaLayout.astro";
import PlaysLayout from "@layouts/plays.astro";

const { pageLang, pageTitle } = Astro.props;

---

<AntreprizaLayout title={pageTitle} lang={pageLang} description={dictionary.description_plays[pageLang]}>
  <PlaysLayout lang={pageLang}/>
</AntreprizaLayout>

