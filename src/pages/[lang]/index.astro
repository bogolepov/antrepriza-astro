---
import theater from '@data/theater.json'
import dictionary from '@data/dictionary.json'

export function getStaticPaths () {
  return theater.languages.map(lng => {
    return {
      params: {lang: lng.lang_code},
      props: {pageLang: lng.lang_code, pageTitle: dictionary.website_lang_version[lng.lang_code]},
    };
  });
}

const { pageLang, pageTitle } = Astro.props;

import AntreprizaLayout from "../../layouts/AntreprizaLayout.astro";
import PlaysCarusel from "@components/carusel_main.astro"
import AfishaLayout from "@layouts/afisha.astro";
---

<AntreprizaLayout title={pageTitle} lang={pageLang} description={dictionary.description_index[pageLang]}>
  <div>
    <PlaysCarusel lang={pageLang}>
  </div>
  <div class="page-separator"></div>
  <AfishaLayout lang={pageLang} hide_section_title={true}/>
</AntreprizaLayout>


