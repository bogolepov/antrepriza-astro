---
import theater from '@data/theater.json'
import dictionary from '@data/dictionary.json'

export function getStaticPaths () {
  return theater.languages.map(lng => {
    return {
      params: {lang: lng.lang_code},
      props: {pageLang: lng.lang_code, pageTitle: dictionary.gallery[lng.lang_code] + ' â€” ' + theater.shortTheaterName[lng.lang_code] },
    };
  });
}

const { pageLang, pageTitle } = Astro.props;

import AntreprizaLayout from "@layouts/AntreprizaLayout.astro";
import GalleryLayout from "@layouts/gallery.astro";
---

<AntreprizaLayout title={pageTitle} lang={pageLang} description={dictionary.description_gallery[pageLang]}>
  <GalleryLayout lang={pageLang}/>
</AntreprizaLayout>

