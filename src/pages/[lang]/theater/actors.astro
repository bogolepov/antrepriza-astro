---
import theater from '@data/theater.json'
import dictionary from '@data/dictionary.json'

export function getStaticPaths () {
  return theater.languages.map(lng => {
    return {
      params: {lang: lng},
      props: {pageLang: lng, pageTitle: theater.shortTheaterName[lng] + " - " + dictionary.menu_actors[lng] },
    };
  });
}

import AntreprizaLayout from "@layouts/AntreprizaLayout.astro";
import Actors from "@components/actors.astro";

const { pageLang, pageTitle } = Astro.props;

---

<AntreprizaLayout title={pageTitle} lang={pageLang}>
  <Actors lang={pageLang}/>
</AntreprizaLayout>
