---
import theater from '@data/theater.json'
import dictionary from '@data/dictionary.json'

export function getStaticPaths () {
  return theater.languages.map(lng => {
    return {
      params: {lang: lng.lang_code},
      props: {pageLang: lng.lang_code, pageTitle: dictionary.menu_actors[lng.lang_code] },
    };
  });
}

import AntreprizaLayout from "@layouts/AntreprizaLayout.astro";
import ActorsLayout from "@layouts/actors.astro";

const { pageLang, pageTitle } = Astro.props;

---

<AntreprizaLayout title={pageTitle} lang={pageLang} description={dictionary.description_actors[pageLang]}>
  <ActorsLayout lang={pageLang}/>
</AntreprizaLayout>
