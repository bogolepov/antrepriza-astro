---
import '@components/social_pages/social_pages.css';

import { Icon } from 'astro-icon/components';

const { add_classes } = Astro.props;

import theater from '@data/theater.json';
---

<ul class:list={['social-list', add_classes]}>
	{
		theater.social_pages.map(socialPage => {
			return (
				<li>
					<a href={socialPage.url} target='_blank' rel='noopener external'>
						<Icon name={socialPage.name.toLowerCase()} class='social-icon' />
					</a>
				</li>
			);
		})
	}
</ul>
