---
import '@styles/ticket_form.css'
import dictionary from '@data/dictionary.json'

import Loader from "@components/loader.astro";

const { lang } = Astro.props;

---
<script>
  document.addEventListener('DOMContentLoaded', () => {
    initTicketBookForm();
  });
</script>
<script is:inline src="/js/ticket-form.js" defer></script>

<div class="ticket-layer layer-on-window glass6 flex-center">
  <div class="ticket-form-wrapper">
    <button class="close__button" onclick="resetTicketForm(event)">&#10006;</button>
    <div class="ticket-form">
      <div class="ticket-play-info">
        <h4 class="play-name">ТРИ СЕСТРЫ</h4>
        <div class="date-flex">
          <div>
            <svg xmlns="http://www.w3.org/2000/svg" class="svg_icon bi-calendar-event" viewBox="0 0 16 16">
              <path d="M11 6.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1z"></path>
              <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"></path>
            </svg>
          </div>
          <div>
            <div class="play-date"></div>
            <div class="play-time"></div>
          </div>
        </div>
        <address class="play-stage">Boxhagener Str. 18, 10245 Berlin (Neue Bühne Friedrichshain)</address>
        <div class="play-genre label-before" data-label={dictionary.genre[lang]+": "}>драма, 14+</div>
        <div class="play-language label-before" data-label={dictionary.language[lang]+": "}>русский</div>
      </div>
      <div class="ticket-at-antrepriza">
        <input type="radio" id="antrepriza" name="platform" checked>
        <label for="antrepriza">Забронировать через сайт Театра</label>
        <div class="subform">

        </div>
      </div>
      <div class="ticket-at-kontramarka">
        <input type="radio" id="kontramarka" name="platform">
        <label for="kontramarka">Купить на Контрамарке</label>
        <div class="subform">
          <div class="ticket-form-buttons-div">
            <button class="ticket-form-book-button" onclick="buttonToKontramarka(event)">Перейти на сайт</button>
          </div>
        </div>
      </div>
    </div>
    <Loader js_loader_name='ticket-form-loader' background='yes'></Loader>
  </div>
</div>
