---
const { lang } = Astro.props;

import dictionary from '@data/dictionary.json'
import theater from '@data/theater.json'

import '@styles/contacts.css'

import { getEntry } from 'astro:content';

const description: string = (lang == 'ru') ? 'contact_ru' : 'contact_de';
const entry = await getEntry('theater', description);
const { Content } = await entry.render();

---

<section class="contact">
  <h1 class="section-title">{dictionary.menu_contact[lang]}</h1>
  <div class="flex1">
    <iframe class="flex1-item left" src={theater.google_map[lang]} width="600" height="500" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    <div class="flex1-item right flex2">
      <h3>
        {theater.longTheaterName[lang]}&nbsp/
        <br>
        {theater.stageName}
      </h3>
      <address>
        {theater.stageAddress.street} {theater.stageAddress.building}
        <br>
        {theater.stageAddress.index} {theater.stageAddress.city}-{theater.stageAddress.district}
      </address>
      <div>
        <a class="info-text" href={"tel:"+theater.phone}>
          <span class="opacity0">{dictionary.telephone[lang]}: </span>
          <span class="opacity1 phone-number">{theater.phone}</span>
        </a>
      </div>
      <div>
        <a class="info-text" href="mailto:info@antrepriza.eu">
          <span class="opacity0">{dictionary.email[lang]}: </span>
          <span class="opacity1">info@antrepriza.eu</span>
        </a>
      </div>
      <div class="description">
        <Content/>
      </div>
    </div>
  </div>
</section>