---
const { lang } = Astro.props;

import { getPlayName, needMarker } from '@scripts/play';
import plays from '@data/plays.json';
plays.sort((play1, play2) =>
	getPlayName(play1, lang).toLowerCase().localeCompare(getPlayName(play2, lang).toLowerCase(), lang)
);


import '@styles/gallery.css';
import photos from '@data/plays_photos.json';

import PlayGallery from '@components/play_gallery.astro';
import YoutubePlayer from '@components/youtube_player/youtube_player.astro';

import dictionary from '@data/dictionary.json';

import type { ImageMetadata } from 'astro';
import { Picture } from 'astro:assets';
const facebookImages = import.meta.glob<{ default: ImageMetadata }>('/src/assets/posters/facebook/*.{jpeg,jpg}');
---

<section class='gallery'>
	<h1 class='section-title'>{dictionary.gallery[lang]}</h1>
	<ul>
		{
			plays.map(play => {
				let playFotos = photos.filter(photo => photo.filename && photo.suffix === play.suffix && photo.is_landscape);
				if (!playFotos.length && !play.trailer_embed) return;
				return (
					<li class='gallery-block'>
						<form>
							<div class='block-title'>
								<h2>
									<a href={`/${lang}/plays/${play.suffix}/`}>
									{getPlayName(play, lang).toUpperCase()}{needMarker(play, lang) && <sup> {play.lang_marker}</sup>}
									</a>
								</h2>

								<div class='media-flex-top tabs'>
									{playFotos.length && (
										<label class='media-photo tab-item' for={'photo-' + play.suffix}>
											{dictionary.photo[lang]}
										</label>
									)}
									{play.trailer_embed && (
										<label class='media-video tab-item' for={'video-' + play.suffix}>
											{dictionary.video[lang]}
										</label>
									)}
									{play.posters.facebook?.length && (
										<label class='media-poster tab-item' for={'poster-' + play.suffix}>
											{dictionary.poster[lang]}
										</label>
										<input
											type='radio'
											id={'poster-' + play.suffix}
											name={'media-' + play.suffix}
											value='poster'
											checked={playFotos.length === 0 && !play.trailer_embed}
										/>
									)}
									{play.trailer_embed && (
										<input
											type='radio'
											id={'video-' + play.suffix}
											name={'media-' + play.suffix}
											value='video'
											checked={playFotos.length === 0}
										/>
									)}
									{playFotos.length && (
										<input
											type='radio'
											id={'photo-' + play.suffix}
											name={'media-' + play.suffix}
											value='photo'
											checked
										/>
									)}
								</div>
							</div>
							<div>
								{playFotos.length && (
									<div class='photo_container'>
										<PlayGallery lang={lang} play_suffix={play.suffix} hover='false' />
									</div>
								)}
								{play.trailer_embed && (
									<div class='video_container'>
										<YoutubePlayer lang={lang} url={play.trailer_embed} />
									</div>
								)}
								{play.posters.facebook?.length && (
									<div class='poster_container'>
										<div class='poster'>
											<Picture
												class:list={'image-wrapper-landscape float'}
												src={facebookImages['/src/assets/posters/facebook/' + play.posters.facebook]()}
												formats={['webp']}
												fallbackFormat='jpg'
												loading='eager'
												widths={[320, 460, 600, 720, 900]}
												sizes={
													'(max-width: 380px) 320px, (max-width: 540px) 460px, (max-width: 700px) 600px, (max-width: 830px) 720px, 900px'
												}
												quality='100'
												alt={getPlayName(play, lang)}
											/>
										</div>
									</div>
								)}
							</div>
							<div class='after-gallery'>
								<div class='media-flex-bottom tabs'>
									{playFotos.length && (
										<label class='media-photo tab-item' for={'photo-' + play.suffix}>
											{dictionary.photo[lang]}
										</label>
									)}
									{play.trailer_embed && (
										<label class='media-video tab-item' for={'video-' + play.suffix}>
											{dictionary.video[lang]}
										</label>
									)}
									{play.posters.facebook?.length && (
										<label class='media-poster tab-item' for={'poster-' + play.suffix}>
											{dictionary.poster[lang]}
										</label>
									)}
								</div>
							</div>
						</form>
					</li>
				);
			})
		}
	</ul>
</section>
